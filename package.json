    "cloudinary": "^2.9.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.33.0",
    "jiti": "^2.6.1",
    "jose": "^6.1.3",
    "lenis": "^1.3.17",
    "lucide-react": "^0.562.0",
    "mongoose": "^9.1.6",
    "next": "16.1.6",
    "next-cloudinary": "^6.17.5",
    "next-nprogress-bar": "^2.4.7",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-fast-marquee": "^1.6.5",
    "react-github-calendar": "^5.0.5",
    "react-icons": "^5.5.0",
    "sharp": "0.34.5",
    "swr": "^2.4.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
