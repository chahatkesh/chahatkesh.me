{
  "name": "chahatkesh-portfolio",
  "version": "2.0.0",
  "description": "Personal portfolio website showcasing projects, skills, and professional experience of Chahat Kesharwani - Full Stack Developer & UI/UX Enthusiast",
  "author": {
    "name": "Chahat Kesharwani",
    "email": "ckesharwani4@gmail.com",
    "url": "https://chahatkesh.me"
  },
  "homepage": "https://chahatkesh.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/chahatkesh/chahatkesh.me"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "full-stack",
    "web-developer",
    "personal-website",
    "developer-portfolio"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npx eslint src",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,css}\"",
    "validate": "pnpm lint && pnpm type-check && pnpm format:check",
    "prepare": "husky",
    "upgrade:latest": "npm upgrade-interactive --latest",
    "update-project-dates": "node scripts/update-project-dates.mjs",
    "update-metrics": "node scripts/update-codebase-metrics.mjs",
    "update-tech-versions": "node scripts/update-tech-versions.mjs",
    "update-all": "npm run update-metrics && npm run update-tech-versions",
    "create-admin": "tsx scripts/create-admin.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
