#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-push checks..."

# Update codebase metrics and tech versions
echo "ğŸ“Š Updating codebase metrics..."
npm run update-metrics || {
  echo "âš ï¸  Failed to update metrics, continuing anyway..."
}

echo "ğŸ“¦ Updating tech versions..."
npm run update-tech-versions || {
  echo "âš ï¸  Failed to update tech versions, continuing anyway..."
}

# Check if there are uncommitted changes from updates
if ! git diff --quiet src/data/site.tsx; then
  echo "âš ï¸  Metrics or versions were updated in src/data/site.tsx"
  echo "   Please review, commit the changes, and push again."
  exit 1
fi

# Run full type check
echo "ğŸ“ Type checking..."
pnpm type-check || {
  echo "âŒ Type check failed!"
  exit 1
}

# Run linting
echo "ğŸ” Linting..."
pnpm lint || {
  echo "âŒ Linting failed!"
  exit 1
}

# Check code formatting
echo "ğŸ¨ Checking code format..."
pnpm format:check || {
  echo "âŒ Code formatting check failed! Run 'pnpm format' to fix."
  exit 1
}

echo "âœ… All pre-push checks passed!"

